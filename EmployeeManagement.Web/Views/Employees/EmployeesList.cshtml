@model IEnumerable<EmployeeManagement.Application.Features.Employees.DTOs.EmployeeDto>

@if (User.IsInRole("1")) // Vérifiez si l'utilisateur est un SuperAdmin
{
    <head>
        <link rel="stylesheet" href="~/css/EmployeesList.css">
    </head>

    <div class="employee-list-container">
        <h1 class="page-title">Liste des Employés</h1>

        <!-- Boutons de connexion et déconnexion -->
        <div class="auth-buttons mb-4">
            <a href="/api/Employees/Login" class="btn btn-outline-secondary">Se connecter</a>
            <form method="post" action="/api/Employees/Logout" class="d-inline">
                <button type="submit" class="btn btn-outline-secondary">Se déconnecter</button>
            </form>
            <a href="/api/Employees/Register" class="btn btn-primary">Créer un compte</a>
        </div>

        <!-- Boutons d'exportation et de création d'employés -->
        <div class="action-buttons mb-4">
            <a href="/api/Employees/export" class="btn btn-success">Exporter vers Excel</a>
            <a href="/api/Employees/export/pdf" class="btn btn-danger">Exporter vers PDF</a>
            <a href="/api/employees/create" class="btn btn-primary">Ajouter un Employé</a>
        </div>

        <!-- Tableau des employés -->
        <table class="table table-striped table-hover">
            <thead class="table-header">
                <tr>
                    <th>ID</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Poste</th>
                    <th>Salaire</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.FirstName</td>
                            <td>@employee.LastName</td>
                            <td>@employee.Position</td>
                            <td>@employee.Salary</td>
                            <td>
                                <a href="/api/Employees/edit/@employee.Id" class="btn btn-outline-warning">Modifier</a>
                                <a href="/api/Employees/details/@employee.Id" class="btn btn-outline-info">Détails</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Aucun employé trouvé.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="access-denied">
        <h1>Accès Refusé</h1>
        <p>Vous n'avez pas les droits pour consulter cette page.</p>
    </div>
}
