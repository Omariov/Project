@model IEnumerable<EmployeeManagement.Application.Features.Employees.DTOs.EmployeeDto>

@if (User.IsInRole("1")) // Vérifiez si l'utilisateur est un SuperAdmin
{
    <h1>Liste des Employés</h1>

    <!-- Boutons de navigation pour Login et Register -->
    <div class="mb-3">
        <a href="/api/Employees/Login" class="btn btn-secondary">Se connecter</a>
        <form method="post" action="/api/Employees/Logout">
            <button type="submit" class="btn btn-secondary">Se déconnecter</button>
        </form>
        <a href="/api/Employees/Register" class="btn btn-primary">Créer un compte</a>
    </div>


    <!-- Boutons d'exportation et de création d'employés -->
    <a href="/api/Employees/export" class="btn btn-success">Exporter vers Excel</a>
    <a href="/api/Employees/export/pdf" class="btn btn-danger">Exporter vers PDF</a>
    <a href="/api/employees/create" class="btn btn-primary">Ajouter un Employé</a>

    <table class="table mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Poste</th>
                <th>Salaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Position</td>
                        <td>@employee.Salary</td>
                        <td>
                            <a href="/api/Employees/edit/@employee.Id" class="btn btn-warning">Modifier</a>
                            <a href="/api/Employees/details/@employee.Id" class="btn btn-info">Détails</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Aucun employé trouvé.</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>Accès Refusé</h1>
    <p>Vous n'avez pas les droits pour consulter cette page.</p>
}
